@using Service.ViewModels.Brand

@model List<BrandListVM>

<div class="col-lg-9 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <a class="btn btn-success" asp-area="Admin" asp-controller="Brand" asp-action="Create">Create Brand</a>


            <table class="table table-striped">
                <thead>
                    <tr>
                        <th> Image </th>
                        <th> Name </th> 
                        <th> Settings </th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>

                            <td> <img style="width: 159px; height: 159px;  object-fit: cover;" src="~/assets/img/@item.Image"> </td>
                            <td> @item.Name </td> 
                            <td>
                                <a class="btn btn-info" asp-area="Admin" asp-controller="Brand" asp-route-id="@item.Id" asp-action="Detail">Detail</a>
                                <a class="btn btn-primary" asp-area="Admin" asp-controller="Brand" asp-route-id="@item.Id" asp-action="Update">Update</a>
                                <a class="btn btn-danger" asp-area="Admin" asp-controller="Brand" asp-route-id="@item.Id" asp-action="Delete">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
