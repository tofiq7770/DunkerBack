@model List<Contact>

    
<style>
    .no-messages {
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 4px;
        background-color: #f9f9f9;
    }

    .table-striped tbody tr {
        transition: background-color 0.3s ease;
    }

    .table-striped tbody tr:hover {
        background-color: #f1f1f1;
    }

    .btn {
        margin-right: 5px;
    }

    .btn:last-child {
        margin-right: 0;
    }
</style>

<div class="col-lg-9 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Contact List</h4>
            <hr>
            @if (Model.Count > 0)
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Settings</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Email</td>
                                <td>
                                    <a class="btn btn-info" asp-area="Admin" asp-controller="Contact" asp-route-id="@item.Id" asp-action="Detail">Detail</a>
                                <a class="btn btn-danger" onclick="confirmDelete('@item.Id')">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="no-messages">
                    <p class="text-center mt-3 text-muted">No messages available.</p>
                </div>
            }
        </div>
    </div>
</div>


<script>
    function confirmDelete(id) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = `/Admin/Contact/Delete/${id}`;
            }
        })
    }
</script>
