<body>

    @await Component.InvokeAsync("Header")

    @RenderBody()

    @await Component.InvokeAsync("Footer")

    <script>
            document.querySelectorAll('.add-to-basket-button').forEach(button => {
                        button.addEventListener('click', async function () {
                            const productId = this.getAttribute('data-product-id');

                            try {
                                const response = await fetch('/Basket/Add', {
                                    method: 'POST',
                                    headers: {
                                        'Content-Type': 'application/json',
                                        'X-Requested-With': 'XMLHttpRequest'
                                    },
                                    body: JSON.stringify(productId)
                                });

                                const result = await response.json();

                                if (response.ok) {
                                    Swal.fire({
                                        title: 'Success!',
                                        text: result.message,
                                        icon: 'success',
                                        timer: 1200,
                                        showConfirmButton: false
                                    });

                                    document.querySelector('.count-basket').textContent = result.uniqueProductCount;

                                    updateBasketUI();
                                } else {
                                    Swal.fire({
                                        title: 'Error!',
                                        text: 'Failed to add product to basket. ' + result.message,
                                        icon: 'error',
                                        timer: 1200,
                                        showConfirmButton: false
                                    });
                                }
                            } catch (error) {
                                console.error('Network error:', error);
                                Swal.fire({
                                    title: 'Network Error!',
                                    text: 'An error occurred. Please try again.',
                                    icon: 'error',
                                    timer: 1200,
                                    showConfirmButton: false
                                });
                            }
                        });
                    });

                    function updateBasketUI() {
                    }
    </script>
